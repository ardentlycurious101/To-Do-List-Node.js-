<%- include("header") -%>
    <div class="box" id="heading">
        <h1><%= day %></h1>
    </div>

    <div>
      <form id="categories" method="get">
        <button type="text" name="work" class="box item categories" formaction="/work">Work</button>
        <button type="text" name="etc" class="box item categories" formaction="/etc">Etc</button>
      </form>
    </div>

    <div class="box">
      <% itemsList.forEach((item) => { %>
        <form action="/delete/<%= category %>" method="post">
          <div class="item">
            <input type="checkbox" name="checkbox" value=<%= item._id %> onChange="this.form.submit()">
            <p name="item"><%= item.name %></p>
          </div>
        </form>
      <% }) %>

      <form class="item" action="/<%= category %>" method="post">
        <input type="text" name="newItem" placeholder="Add new item" autocomplete="off">
        <button type="submit" name="addButton" class="round-button" value=<%= category %>>+</button>
      </form>
    </div>
<%- include("footer") -%>
